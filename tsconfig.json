{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
  // "files": ["src/index.ts", "src/types/env.d.ts"]
}
